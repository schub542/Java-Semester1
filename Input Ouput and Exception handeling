//import libraries
import java.io.*;
import java.util.Scanner;

public class InpOut {
  
  public static void main(String[] args)
  {
    //File path
    final String INPUT = "goodInput.txt";
    final String OUTPUT = "triangles.txt";
    
    //calling makeTriangles method
    boolean status = makeTriangles(INPUT, OUTPUT);
    
    if (status)
    {
      System.out.println("OK");
    }
    else
    {
      System.out.println("Check your input or output files.");
    }
    
  }
  
  public static boolean makeTriangles(String inputFile, String outputFile) 
  {
    //Declare holding integer for true values if FileException error exists
    //Exception for File Error
    try{  
      
      File triangleSides= new File(inputFile);
      Scanner writtenFile= new Scanner(triangleSides);
      
      PrintWriter resultantSide= new PrintWriter (outputFile);
      //hasNext scanner class method to scan each data point
      
      int Error=1;//Declare variable to loop numerical data error till true
      do{
        //Exception for numberical data error
        try{
          
          while(writtenFile.hasNext())//read each line of input
          {
            int number;  
            number = writtenFile.nextInt();//input from goodinput file
            //include cast operator to have compatiable types
            int a =(int) Math.pow(number,2.0);
            
            int number1;
            number1=writtenFile.nextInt();
            //include cast operator to have compatiable types
            int b= (int)Math.pow(number1,2.0);
            int x= a+b;
            //Math square root method
            double c=Math.sqrt(x);
            Error=2;
            
            resultantSide.println(c);
          }
        }
        catch(Exception e)
        {
          resultantSide.println("Error");
        }
      }while(Error==1);
      
      //Close files
      writtenFile.close();
      resultantSide.close();
    }
    catch(FileNotFoundException ex)//catch invalid file
    {
      System.out.println("Invalid File");
      return false;
    }
    return true;
    
  }
  
}
